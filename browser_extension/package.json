{
    "name": "agentic-browser-extension",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "description": "AI-powered agentic browser extension",
    "scripts": {
        "build": "vite build",
        "build:prod": "vite build --mode production",
        "dev": "vite build --watch",
        "type-check": "tsc --noEmit",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "format": "prettier --write src/**/*.{ts,tsx,css,html}",
        "clean": "rm -rf dist",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:safe": "echo 'ðŸ”’ Running tests with LLM safety checks...' && vitest run --reporter=verbose",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@jarvis/ws-client": "^1.0.0",
        "@jarvis/device-identity": "^1.0.0",
        "@jarvis/protocol": "^1.0.0",
        "marked": "^12.0.2"
    },
    "devDependencies": {
        "@types/chrome": "^0.0.254",
        "@types/node": "^20.19.9",
        "@typescript-eslint/eslint-plugin": "^6.18.1",
        "@typescript-eslint/parser": "^6.18.1",
        "@vitest/ui": "^1.1.3",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "jsdom": "^24.0.0",
        "postcss": "^8.4.33",
        "prettier": "^3.1.1",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3",
        "vite": "^5.0.11",
        "vitest": "^1.1.3"
    }
}